{
    "compilerOptions": {
        "target": "ES6",
        "moduleResolution": "node",
        "module": "CommonJS",
        "noImplicitAny": true,
        "sourceMap": false,
        "outDir": "js",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "esModuleInterop": true
    },
    "include": [
        "ts/**/*"
    ]
}